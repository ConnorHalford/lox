fun Fib(n)
{
	if (n <= 1)
	{
		return n;
	}
	return Fib(n - 2) + Fib(n - 1);
}

print "Recursive function calls:";
for (var i = 0; i < 20; i = i + 1)
{
	print Fib(i);
}

